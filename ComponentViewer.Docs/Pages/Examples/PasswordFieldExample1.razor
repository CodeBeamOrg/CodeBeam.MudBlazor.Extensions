<MudGrid>
    <MudItem Class="d-flex gap-4 align-center flex-wrap">
        <MudPasswordField @bind-Value="@_password" @bind-PasswordMode="@_passwordMode" Variant="Variant.Outlined" />
        <MudSwitch @bind-Checked="_passwordMode" Color="Color.Primary">Password Mode</MudSwitch>
        <MudTextField T="string" ValueChanged="Refresh" Immediate />
        <MudQrGenerator @ref="_qrGenerator" />
        @*<MudButton>Refresh</MudButton>*@
    </MudItem>
</MudGrid>

@code{
    string _password = "asdf";
    bool _passwordMode;

    MudQrGenerator _qrGenerator;
    private void Refresh(string value)
    {
        _qrGenerator.Refresh(value);
        StateHasChanged();
    }
}
