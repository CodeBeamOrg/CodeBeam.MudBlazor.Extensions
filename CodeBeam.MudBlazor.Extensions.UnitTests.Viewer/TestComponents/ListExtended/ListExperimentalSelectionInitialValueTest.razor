@namespace MudExtensions.UnitTests.TestComponents

<MudListExtended @ref="_list" T="int?" Clickable="true" Color="Color" @bind-SelectedItem="selectedItem" @bind-SelectedValue="selectedValue">
    <MudListSubheaderExtended T="int?">
        Your drink:
        <MudChip Color="Color.Secondary">
            @(selectedItem?.Text ?? "You are dry")
        </MudChip>
    </MudListSubheaderExtended>
    <MudListItemExtended T="int?" Text="Sparkling Water" Value="1"/>
    <MudListItemExtended T="int?" Text="Teas">
        <NestedList>
            <MudListItemExtended T="int?" Text="Earl Grey" Value="2" />
            <MudListItemExtended T="int?" Text="Matcha"  Value="3"/>
            <MudListItemExtended T="int?" Text="Pu'er"  Value="4"/>
        </NestedList>
    </MudListItemExtended>
    <MudListItemExtended T="int?" Text="Coffees">
        <NestedList>
            <MudListItemExtended T="int?" Text="Irish Coffee" Value="5" />
            <MudListItemExtended T="int?" Text="Double Espresso" Value="6" />
            <MudListItemExtended T="int?" Text="Cafe Latte"  Value="7"/>
        </NestedList>
    </MudListItemExtended>
</MudListExtended>

@code
{
    [Parameter] public Color Color { get; set; } = Color.Primary;
    MudListExtended<int?> _list;
    public static string __description__ = "Sparkling Water should be selected initially.";
    MudListItemExtended<int?> selectedItem;
    int? selectedValue = 1;

    public void SetSelectedValue(int? value)
    {
        selectedValue = value;
        StateHasChanged();
    }
}