<MudCombobox Label="Select Item"
             MultiSelection="true"
             T="string"
             Delimiter="^"
             SelectAll="true"
             @bind-SelectedValues="@SelectedItems">

    @foreach (var item in AllItems)
    {
        <MudComboboxItem T="string" Value="@item">@item</MudComboboxItem>
    }
</MudCombobox>

